{
  "name": "spotifood-wrapper",
  "version": "1.0.0",
  "description": "The wrapper for web api of spotify",
  "main": "lib/index.js",
  "scripts": {
    "clear": "rimraf lib",
    "build": "npm run clear && ./node_modules/.bin/babel --out-dir lib src",
    "build:watch": "npm run build -- --watch",
    "build:umd": "./node_modules/.bin/webpack --output-filename spotifood-wrapper.umd.js --watch",
    "build:umd:min": "./node_modules/.bin/webpack --output-filename spotifood-wrapper.umd.min.js -p",
    "build:all": "npm run build && npm run build:umd && npm run build:umd:min",
    "lint": "./node_modules/.bin/eslint src/*.js",
    "prepush": "npm run lint && npm run test:coverage",
    "test": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-polyfill --compilers js:babel-register",
    "test:tdd": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-polyfill --compilers js:babel-register --watch",
    "test:coverage": "nyc npm test",
    "coveralls": "npm run test:coverage && nyc report --reporter=text-lcov | coveralls",
    "prepublish": "npm run build:all"
  },
  "files": [
    "dist",
    "lib"
  ],
  "nyc": {
    "functions": true,
    "lines": 80,
    "check-coverage": true,
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mateussmohamed/spotifood-wrapper.git"
  },
  "keywords": [
    "js",
    "tdd",
    "library",
    "spotify"
  ],
  "author": "Mateus Santana <mateuss.dev@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mateussmohamed/spotifood-wrapper/issues"
  },
  "homepage": "https://github.com/mateussmohamed/spotifood-wrapper#readme",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.3.2",
    "babel-register": "^6.24.0",
    "chai": "^3.5.0",
    "coveralls": "^3.0.0",
    "eslint": "^4.0.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.6.1",
    "husky": "^0.11.9",
    "mocha": "^3.2.0",
    "node-fetch": "^1.7.3",
    "nyc": "^10.2.0",
    "rimraf": "^2.6.1",
    "sinon": "^4.1.2",
    "sinon-chai": "^2.14.0",
    "sinon-stub-promise": "^4.0.0",
    "webpack": "^3.8.1"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0"
  }
}
